{
  "name": "react-recontext",
  "version": "3.0.1",
  "description": "A lightweight state management inspired by Flux, Redux, based on the lastest React Context API",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"No test specified\"",
    "format": "prettier --write \"src/**/*.tsx\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "check": "npm run format && npm run lint && npm run test",
    "clean": "rimraf dist coverage",
    "prebuild": "npm run check && npm run clean",
    "build": "tsc --pretty",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "prepublish": "npm run build",
    "npm:publish": "npm run prepublish && npm publish"
  },
  "author": {
    "name": "Minh Tran",
    "url": "https://github.com/minhtc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/minhtc/react-recontext"
  },
  "homepage": "https://github.com/minhtc/react-recontext#readme",
  "license": "ISC",
  "keywords": [
    "react",
    "reactjs",
    "react-native",
    "redux",
    "context",
    "react-context",
    "state",
    "lightweight",
    "flux",
    "state"
  ],
  "peerDependencies": {
    "react": "^16.5.0"
  },
  "devDependencies": {
    "@types/react": "^16.4.18",
    "cross-env": "^5.2.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.3"
  },
  "dependencies": {}
}

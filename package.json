{
  "name": "react-recontext",
  "version": "3.1.4",
  "description": "A lightweight state management inspired by Flux, Redux, based on the lastest React Context API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "echo \"No test specified\"",
    "format": "prettier --write \"src/**/*.tsx\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "check": "npm run format && npm run lint && npm run test",
    "clean": "rimraf dist coverage",
    "prebuild": "npm run check && npm run clean",
    "build": "rollup -c",
    "npm:publish": "npm run build && npm publish"
  },
  "author": {
    "name": "Minh Tran",
    "url": "https://github.com/minhtc"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/minhtc/react-recontext"
  },
  "homepage": "https://github.com/minhtc/react-recontext#readme",
  "license": "ISC",
  "keywords": [
    "react",
    "reactjs",
    "react-native",
    "redux",
    "context",
    "react-context",
    "state",
    "lightweight",
    "flux",
    "state"
  ],
  "peerDependencies": {
    "react": "^16.6.0"
  },
  "devDependencies": {
    "@types/react": "^16.7.18",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "rollup": "^1.0.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-typescript2": "^0.18.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {}
}
